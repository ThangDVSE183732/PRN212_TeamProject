<UserControl x:Class="PRN212_TeamProject.AddServiceControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PRN212_TeamProject"
             mc:Ignorable="d" 
             >
    <StackPanel>
        <StackPanel >
            <Grid Margin="50,15,10,0" Height="220">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>

                    </Grid.RowDefinitions>
                    <TextBlock Text="Full Name" Grid.Column="0" Grid.Row="0" />
                    <TextBox x:Name="txtFullName" Grid.Column="0" Grid.Row="1"  Margin="0,0,20,0"/>
                    <TextBlock Text="Password" Margin="1,5,0,0" Grid.Column="0" Grid.Row="2" />
                    <TextBox x:Name="txtPassword" Grid.Column="0" Grid.Row="3"  Margin="0,0,20,0"/>
                    <TextBlock  Text="Phone Number" Grid.Column="1" Grid.Row="0" />
                    <ComboBox  x:Name="cbCustomerStatus" Grid.Column="1" Grid.Row="1"  Margin="0,0,40,0">
                        <ComboBoxItem Content="Active" Tag="1"/>
                        <ComboBoxItem Content="Banned" Tag="0"/>
                    </ComboBox>
                    <TextBlock Text="Email" Margin="1,5,0,0"  Grid.Column="0" Grid.Row="4" />
                    <TextBox x:Name="txtEmail" Grid.Column="0" Grid.RowSpan="3" Grid.Row="5" Margin="0,0,20,0"  />
                <Button Content="Create" Grid.Column="0" Grid.Row="9" Background="LightBlue" Width="150" HorizontalAlignment="Left"  Click="btnCreate_Click"/>
            </Grid>
            </StackPanel>

    </StackPanel>
</UserControl>
