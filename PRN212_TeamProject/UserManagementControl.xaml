<UserControl x:Class="PRN212_TeamProject.UserManagementControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PRN212_TeamProject"
             mc:Ignorable="d" 
            >
    <StackPanel>
        <Border BorderBrush="Black" BorderThickness="1" Width="530" Height="230" >
            <DockPanel>
                <TextBlock Text="Customer Profile" DockPanel.Dock="Top" Margin="5,5,0,0"/>
                <Grid Margin="20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>


                    </Grid.RowDefinitions>
                    <TextBlock Text="Customer ID" Grid.Column="0" Grid.Row="0" />
                    <TextBox x:Name="txtCustomerID" Grid.Column="0" Grid.Row="1"  Margin="0,0,50,0" IsReadOnly="True"/>
                    <TextBlock Text="CustomerFullName" Margin="1,5,0,0" Grid.Column="0" Grid.Row="2" />
                    <TextBox x:Name="txtCustomerFullName" Grid.Column="0" Grid.Row="3"  Margin="0,0,50,0"/>
                    <TextBlock Text="Telephone" Grid.Column="1" Grid.Row="0" />
                    <TextBox x:Name="txtCustomerPhone" Grid.Column="1" Grid.Row="1"  Margin="0,0,50,0"/>
                    <TextBlock Text="CustomerBirthday" Margin="1,5,0,0" Grid.Column="1" Grid.Row="2" />
                    <DatePicker x:Name="txtCustomerBD" Grid.Column="1" Grid.Row="3"  Margin="0,0,50,0"/>
                    <TextBlock  Text="CustomerStatus" Margin="1,5,0,0" Grid.Column="1" Grid.Row="4" />
                    <ComboBox  x:Name="cbCustomerStatus" Grid.Column="1" Grid.Row="5"  Margin="0,0,50,0">
                        <ComboBoxItem Content="Active" Tag="1"/>
                        <ComboBoxItem Content="Banned" Tag="0"/>
                    </ComboBox>
                    <TextBlock Text="Address" Margin="1,5,0,0"  Grid.Column="0" Grid.Row="4" />
                    <TextBox x:Name="txtEmailAdress" Grid.Column="0" Grid.Row="5" Margin="0,0,20,0" Height="27"  />
                </Grid>
            </DockPanel>
        </Border>
        <Grid>

            <Button Margin="27,0,0,0" Width="80" Height="15" HorizontalAlignment="Left" Content="Update Client" FontSize="8" />


        </Grid>

    </StackPanel>
</UserControl>
