<UserControl x:Class="PRN212_TeamProject.SearchDoctorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PRN212_TeamProject">
    <StackPanel Margin="0,10,0,0">
        <Grid Margin="0,0,0,10">
            <TextBox x:Name="txtSearch" Width="220" Height="20" Margin="180,0,0,0"/>
            <Button Content="Search" Width="60" Height="20" Margin="380,0,0,0" Click="btnSearch_Click"/>
        </Grid>

        <local:DoctorTable x:Name="doctorTableControl" Height="210"/>

    </StackPanel>
</UserControl>
