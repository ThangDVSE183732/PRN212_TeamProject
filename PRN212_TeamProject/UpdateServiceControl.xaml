<UserControl x:Class="PRN212_TeamProject.UpdateServiceControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PRN212_TeamProject"
             mc:Ignorable="d">
    <StackPanel>
        <StackPanel>
            <Grid Margin="50,15,10,0" Height="240">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Left Column -->
                <TextBlock Text="Service ID" Grid.Column="0" Grid.Row="0" />
                <TextBox x:Name="txtServiceId" Grid.Column="0" Grid.Row="1" Margin="0,0,20,0" IsReadOnly="True"/>

                <TextBlock Text="Service Name" Margin="1,5,0,0" Grid.Column="0" Grid.Row="2" />
                <TextBox x:Name="txtServiceName" Grid.Column="0" Grid.Row="3" Margin="0,0,20,0"/>

                <TextBlock Text="Description" Grid.Column="0" Grid.Row="4" Margin="1,5,0,0"/>
                <TextBox x:Name="txtServiceDescription" Grid.Column="0" Grid.Row="5" Margin="0,0,20,0"/>

                <TextBlock Text="Price" Grid.Column="0" Grid.Row="6" Margin="1,5,0,0"/>
                <TextBox x:Name="txtServicePrice" Grid.Column="0" Grid.Row="7" Margin="0,0,20,0"/>

                <!-- Right Column -->
                <TextBlock Text="Service Status" Grid.Column="1" Grid.Row="0" />
                <ComboBox x:Name="cbServiceStatus" Grid.Column="1" Grid.Row="1" Margin="0,0,40,0">
                    <ComboBoxItem Content="Active" Tag="1"/>
                    <ComboBoxItem Content="Inactive" Tag="0"/>
                </ComboBox>

                <!-- Button -->
                <Button Content="Update" Grid.Column="0" Grid.Row="9"
                        Width="150" HorizontalAlignment="Left" Click="btnUpdate_Click"/>
            </Grid>
        </StackPanel>
    </StackPanel>
</UserControl>
