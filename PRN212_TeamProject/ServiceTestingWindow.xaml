    <Window x:Class="PRN212_TeamProject.ServiceTestingWindow"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:local="clr-namespace:PRN212_TeamProject"
            mc:Ignorable="d"
            Title="ServiceTestingWindow" Height="500" Width="800">

        <StackPanel Margin="10" VerticalAlignment="Top">

            <!-- Dữ liệu dịch vụ -->
            <TextBlock Text="Service List" FontWeight="Bold" FontSize="14" Margin="0,0,0,5"/>
            <DataGrid Name="dgService" AutoGenerateColumns="False" CanUserAddRows="False" Margin="0,0,0,10" SelectionChanged="dgService_SelectionChanged">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Service ID" Binding="{Binding ServiceId}" />
                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" />
                    <DataGridTextColumn Header="Description" Binding="{Binding Description}" />
                    <DataGridTextColumn Header="Price" Binding="{Binding Price}" />
                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" />
                </DataGrid.Columns>
            </DataGrid>

            <Separator Margin="0,10"/>

            <!-- Nhập thông tin dịch vụ -->
            <TextBlock Text="Service Information" FontWeight="Bold" FontSize="14" Margin="0,0,0,5"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>


                </Grid.RowDefinitions>

                <!-- Tên -->
                <Label Grid.Row="0" Grid.Column="0" Content="Name" VerticalAlignment="Center"/>
                <TextBox x:Name="txtName" Grid.Row="0" Grid.Column="1" Margin="5"/>

                <!-- Mô tả -->
                <Label Grid.Row="1" Grid.Column="0" Content="Description" VerticalAlignment="Center"/>
                <TextBox x:Name="txtDescription" Grid.Row="1" Grid.Column="1" Margin="5"/>

                <!-- Giá -->
                <Label Grid.Row="2" Grid.Column="0" Content="Price" VerticalAlignment="Center"/>
                <TextBox x:Name="txtPrice" Grid.Row="2" Grid.Column="1" Margin="5"/>

            <Label Grid.Row="3" Grid.Column="0" Content="Status" VerticalAlignment="Center"/>
            <Label Grid.Row="3" Grid.Column="0" Content="Status" VerticalAlignment="Center"/>
            <ComboBox x:Name="cbStatus" Grid.Row="3" Grid.Column="1" Margin="5">
                <ComboBoxItem Content="Active" />
                <ComboBoxItem Content="Inactive" />
            </ComboBox>



            <!-- Nút Tạo -->
                <Button x:Name="btn_CreateService" Grid.Row="4" Grid.Column="1" Content="Create Service" Margin="5" Width="120" Click="btn_CreateService_Click"/>

                <!-- Separator -->
                <Separator Grid.Row="5" Grid.ColumnSpan="3" Margin="0,10"/>

                <!-- Tìm kiếm -->
                <TextBlock Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" Text="Search Service" FontWeight="Bold" FontSize="14" Margin="0,0,0,5"/>
                <TextBox x:Name="txtSearch" Grid.Row="7" Grid.Column="1" Margin="5"/>
                <Button x:Name="btn_SearchSerive" Grid.Row="7" Grid.Column="2" Content="Search Service" Margin="5" Click="btn_SearchSerive_Click"/>

                <!-- Separator -->
                <Separator Grid.Row="8" Grid.ColumnSpan="3" Margin="0,10"/>

                <!-- Cập nhật & Xóa -->
                <TextBlock Grid.Row="9" Grid.Column="0" Grid.ColumnSpan="2" Text="Update &amp; Remove Service" FontWeight="Bold" FontSize="14" Margin="0,0,0,5"/>
                <StackPanel Grid.Row="10" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="btn_UpdateService" Content="Update Service" Margin="5" Width="120" Click="btn_UpdateService_Click"/>
                    <Button x:Name="btn_DeleteService" Content="Delete Service" Margin="5" Width="120" Click="btn_DeleteService_Click"/>
                </StackPanel>
            </Grid>
        </StackPanel>
    </Window>
