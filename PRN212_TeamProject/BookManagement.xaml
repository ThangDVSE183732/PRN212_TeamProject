<UserControl x:Class="PRN212_TeamProject.BookManagement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PRN212_TeamProject"
             mc:Ignorable="d" 
             >
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Form -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons -->
        </Grid.RowDefinitions>

        <TextBlock Text="Thông tin khám" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

        <StackPanel Grid.Row="1" VerticalAlignment="Top">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="Họ và tên:"/>
                <TextBox Name="NameTextBox" />
            </StackPanel>

            <StackPanel Orientation="Vertical">
                <TextBlock Text="Ngày tháng năm sinh:"/>
                <TextBox Name="DobTextBox" />
            </StackPanel>



            <StackPanel Orientation="Vertical">
                <TextBlock Text="Loại khám (chọn 1):" Margin="0,5,0,0"/>
                <ComboBox Name="ExamTypeComboBox" SelectionChanged="ExamTypeComboBox_SelectionChanged"
                          DisplayMemberPath="DisplayText" SelectedValuePath="Name" />
            </StackPanel>


            <StackPanel Orientation="Vertical" Margin="0,5,0,0">
                <TextBlock Text="Phương thức thanh toán:"/>
                <StackPanel Orientation="Horizontal" >
                    <RadioButton GroupName="Payment" Name="QrRadio" Content="Online" IsChecked="True"/>
                    <RadioButton GroupName="Payment" Name="CardRadio" Content="Offline"/>
                </StackPanel>
            </StackPanel>

            <StackPanel Orientation="Vertical" Margin="0,5,0,0">
                <TextBlock Text="Tóm tắt giá:" FontWeight="Bold"/>
                <TextBlock Name="SelectedExamText" Text="Chưa chọn loại khám"/>
                <TextBlock Name="PriceText" Text="Giá: 0 đ"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right"  Margin="0,15,0,0">
            <Button Name="PayOButton" Click="PayOButton_Click" Width="100" >Thanh toán</Button>
           </StackPanel>
    </Grid>
</UserControl>
