<UserControl x:Class="PRN212_TeamProject.BookingServiceControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PRN212_TeamProject"
             mc:Ignorable="d" 
             Loaded="BookingServiceLoader">
    <Grid Margin="10,5,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="23*"/>
            <RowDefinition Height="52*"/>
        </Grid.RowDefinitions>

        <Label Content="Note" HorizontalAlignment="Left" Margin="27,70,0,0" VerticalAlignment="Top" Height="24" Width="144" FontSize="12" FontFamily="Arial"  FontWeight="Bold" Grid.RowSpan="2"/>
        <TextBox x:Name="txtNote" HorizontalAlignment="Left" Margin="74,43,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="214" Background="#FFFFF8EB" Height="79" IsReadOnly="True" RenderTransformOrigin="0.502,0.3" Grid.RowSpan="2"/>
        <Label Content="Price" HorizontalAlignment="Left" Margin="317,19,0,0" VerticalAlignment="Top" Height="36" Width="93" FontSize="12" FontFamily="Arial"  FontWeight="Bold" Grid.Row="1"/>
        <TextBox  x:Name="txtPrice" HorizontalAlignment="Left" Margin="377,15,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="170" Background="#FFFFF8EB" Height="30" Grid.Row="1"/>
        <Label Content="Date Booking" HorizontalAlignment="Left" Margin="27,-2,0,0" VerticalAlignment="Top" Height="34" Width="110" FontSize="12" FontFamily="Arial"  RenderTransformOrigin="0.636,1.173" FontWeight="Bold"/>
        <DatePicker x:Name="txtDate" HorizontalAlignment="Left" Margin="74,-2,0,0" VerticalAlignment="Top" Width="214" Height="30"/>
        <Label Content="Service"  HorizontalAlignment="Left" Margin="317,-4,0,0" VerticalAlignment="Top" Height="35" Width="125" FontSize="12" FontFamily="Arial"  FontWeight="Bold"/>
        <ComboBox x:Name="cnbService" HorizontalAlignment="Left" Margin="377,-4,0,0" VerticalAlignment="Top" Width="170" Height="30"/>
        <Label Content="Slot" HorizontalAlignment="Left" Margin="317,43,0,0" VerticalAlignment="Top" Height="27" Width="99" FontSize="12" FontFamily="Arial"  RenderTransformOrigin="0.51,-0.191" FontWeight="Bold"/>
        <ComboBox x:Name="cnbSlot" HorizontalAlignment="Left" Margin="377,41,0,0" VerticalAlignment="Top" Width="170" Height="30"/>

        <DataGrid x:Name="dgBookingService" Margin="27,73,156,0" Height="144" VerticalAlignment="Top" Grid.Row="1" SelectionChanged="dgBookingService_SelectedChanged"   />
        <Button x:Name="btnBook" Content="Book" HorizontalAlignment="Left" Margin="447,109,0,0" VerticalAlignment="Top" Width="100" Height="24"  FontSize="8"  FontWeight="Bold" Background="LightBlue" Foreground="#FFFFFFFF" Click="btnBook_Click" Grid.Row="1" />

    </Grid>
</UserControl>
