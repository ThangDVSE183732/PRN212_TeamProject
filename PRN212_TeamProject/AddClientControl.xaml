<UserControl x:Class="PRN212_TeamProject.AddClientControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PRN212_TeamProject"
             mc:Ignorable="d" 
             >
    <StackPanel>

        <Grid Margin="30,15,10,0" Height="220">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>

            </Grid.RowDefinitions>
            <TextBlock Text="Customer ID" Grid.Column="0" Grid.Row="0" />
            <TextBox x:Name="txtId" Grid.Column="0" Grid.Row="1"  Margin="0,0,20,0" IsReadOnly="True"/>
            <TextBlock Text="CustomerFullName" Margin="1,5,0,0" Grid.Column="0" Grid.Row="2" />
            <TextBox x:Name="txtCustomerFullName" Grid.Column="0" Grid.Row="3"  Margin="0,0,20,0"/>
            <TextBlock  Text="CustomerStatus" Grid.Column="1" Grid.Row="0" />
            <ComboBox  x:Name="cbCustomerStatus" Grid.Column="1" Grid.Row="1"  Margin="0,0,100,0">
                <ComboBoxItem Content="Active" Tag="1"/>
                <ComboBoxItem Content="Banned" Tag="0"/>
            </ComboBox>
            <TextBlock Text="CustomerBirthday" Margin="1,5,0,0" Grid.Column="1" Grid.Row="2" />
            <DatePicker x:Name="txtCustomerBD" Grid.Column="1" Grid.Row="3"  Margin="0,0,20,0"/>
            <TextBlock Text="Email Address" Margin="1,5,0,0"  Grid.Column="0" Grid.Row="4" />
            <TextBox x:Name="txtEmailAdress" Grid.Column="0" Grid.Row="5" Margin="0,0,20,0" />
            <TextBlock Text="Telephone" Grid.Column="1" Grid.Row="4" Margin="1,5,0,0"/>
            <TextBox x:Name="txtCustomerPhone" Grid.Column="1" Grid.Row="5"  Margin="0,0,20,0"/>
            <TextBlock Text="Address" Grid.Column="0" Grid.Row="6" Margin="1,5,0,0"/>
            <TextBox x:Name="txtAddress" Grid.Column="0" Grid.Row="7"  Margin="0,0,20,0"/>
            <TextBlock Text="Password" Grid.Column="1" Grid.Row="6" Margin="1,5,0,0"/>
            <PasswordBox x:Name="txtPassword" Grid.Column="1" Grid.Row="7"  Margin="0,0,20,0"/>
            <Button Content="Create" Grid.Column="0" Grid.Row="9" Background="LightBlue" Width="150" HorizontalAlignment="Left" Click="btnCreate_Click" />
        </Grid>
    </StackPanel>
</UserControl>
