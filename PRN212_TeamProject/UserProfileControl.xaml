<UserControl x:Class="PRN212_TeamProject.UserProfileControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PRN212_TeamProject"
             mc:Ignorable="d" 
             Loaded="UserProfileLoader"
            >
    <StackPanel>
        <Border   BorderBrush="Black" BorderThickness="1" Width="530" Height="280" Padding="20,10,20,10">
            <StackPanel>

                <Grid Margin="30,15,10,0" Height="220">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>

                    </Grid.RowDefinitions>
                    <TextBlock Text="Full Name" Grid.Column="0" Grid.Row="0" />
                    <TextBox x:Name="txtFullName" Grid.Column="0" Grid.Row="1"  Margin="0,0,20,0"/>
                    <TextBlock Text="Password" Margin="1,5,0,0" Grid.Column="0" Grid.Row="2" />
                    <TextBox x:Name="txtPassword" Grid.Column="0" Grid.Row="3"  Margin="0,0,20,0"/>
                    <TextBlock  Text="Phone Number" Grid.Column="1" Grid.Row="0" />
                    <TextBox x:Name="txtPhone" Grid.Column="1" Grid.Row="1"  Margin="0,0,20,0"/>
                    <TextBlock Text="Date Of Birth" Margin="1,5,0,0" Grid.Column="1" Grid.Row="2" />
                    <DatePicker x:Name="txtBD" Grid.Column="1" Grid.Row="3"  Margin="0,0,20,0"/>
                    <TextBlock Text="Email" Margin="1,5,0,0"  Grid.Column="0" Grid.Row="4" />
                    <TextBox x:Name="txtEmail" Grid.Column="0" Grid.Row="5" Margin="0,0,20,0"  />
                    <TextBlock Text="Address" Grid.Column="0" Grid.Row="6" Margin="1,5,0,0"/>
                    <TextBox x:Name="txtAddress" Grid.Column="0" Grid.Row="7"  Margin="0,0,20,0"/>
                    <Button Content="Update" Grid.Column="0" Grid.Row="9" Background="LightBlue" Width="150" HorizontalAlignment="Left"  Click="btnUpdate_Click"/>

                </Grid>
            </StackPanel>
        </Border>
        <Grid>
            <Button Margin="27,0,0,0" Width="80" Height="15" HorizontalAlignment="Left" Content="Update" FontSize="8" />
        </Grid>
    </StackPanel>
</UserControl>
