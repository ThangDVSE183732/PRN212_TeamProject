<UserControl x:Class="PRN212_TeamProject.PatientProfileManagement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PRN212_TeamProject"
             mc:Ignorable="d" 
            >
    <StackPanel>
        <Border   BorderBrush="Black" BorderThickness="1" Width="530" Height="280" Padding="20,10,20,10">
            <StackPanel>

                <Grid Margin="30,15,10,0" Height="220">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>

                    </Grid.RowDefinitions>
                    <TextBlock Text="Customer ID" Grid.Column="0" Grid.Row="0" />
                    <TextBox x:Name="txtId" Grid.Column="0" Grid.Row="1"  Margin="0,0,20,0"/>
                    <TextBlock Text="CustomerFullName" Margin="1,5,0,0" Grid.Column="0" Grid.Row="2" />
                    <TextBox x:Name="txtCustomerFullName" Grid.Column="0" Grid.Row="3"  Margin="0,0,20,0"/>
                    <TextBlock  Text="CustomerStatus" Grid.Column="1" Grid.Row="0" />
                    <ComboBox  x:Name="cbCustomerStatus" Grid.Column="1" Grid.Row="1"  Margin="0,0,100,0">
                        <ComboBoxItem Content="Active" Tag="1"/>
                        <ComboBoxItem Content="Banned" Tag="0"/>
                    </ComboBox>
                    <TextBlock Text="CustomerBirthday" Margin="1,5,0,0" Grid.Column="1" Grid.Row="2" />
                    <DatePicker x:Name="txtCustomerBD" Grid.Column="1" Grid.Row="3"  Margin="0,0,20,0"/>
                    <TextBlock Text="Address" Margin="1,5,0,0"  Grid.Column="0" Grid.Row="4" />
                    <TextBox x:Name="txtEmailAdress" Grid.Column="0" Grid.Row="5" Margin="0,0,20,0"  />
                    <TextBlock Text="Telephone" Grid.Column="1" Grid.Row="4" Margin="1,5,0,0"/>
                    <TextBox x:Name="txtCustomerPhone" Grid.Column="1" Grid.Row="5"  Margin="0,0,20,0"/>
                    <TextBlock Text="Hello" Grid.Column="0" Grid.Row="6" Margin="1,5,0,0"/>
                    <TextBox Grid.Column="0" Grid.Row="7"  Margin="0,0,20,0"/>
                    <TextBlock Text="World" Grid.Column="1" Grid.Row="6" Margin="1,5,0,0"/>
                    <TextBox Grid.Column="1" Grid.Row="7"  Margin="0,0,20,0"/>
                    <TextBlock Text="World" Grid.Column="0" Grid.Row="8" Margin="1,5,0,0"/>
                    <TextBox Grid.Column="0" Grid.Row="9"  Margin="0,0,20,0"/>
                </Grid>
            </StackPanel>
        </Border>
        <Grid>

            <Button Margin="27,0,0,0" Width="80" Height="15" HorizontalAlignment="Left" Content="Update" FontSize="8" />
        </Grid>
    </StackPanel>
</UserControl>
