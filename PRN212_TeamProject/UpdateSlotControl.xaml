<UserControl x:Class="PRN212_TeamProject.UpdateSlotControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PRN212_TeamProject"
             mc:Ignorable="d" 
             >
    <StackPanel>

        <Grid Margin="30,15,10,0" Height="220">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>

            </Grid.RowDefinitions>
            <TextBlock Text="Customer ID" Grid.Column="0" Grid.Row="0" />
            <ComboBox  x:Name="cbCustomer" Grid.Column="0" Grid.Row="1"  Margin="0,0,20,0"/>
            <TextBlock Text="CustomerFullName" Margin="1,5,0,0" Grid.Column="0" Grid.Row="2" />
            <DatePicker x:Name="txtCustomerBD" Grid.Column="0" Grid.Row="3"  Margin="0,0,20,0"/>
            <TextBlock  Text="CustomerStatus" Grid.Column="1" Grid.Row="0" />
            <ComboBox  x:Name="cbCustomerStatus" Grid.Column="1" Grid.Row="1"  Margin="0,0,20,0">
                <ComboBoxItem Content="Active" Tag="1"/>
                <ComboBoxItem Content="Banned" Tag="0"/>
            </ComboBox>

            <TextBlock Text="Address" Margin="1,5,0,0"  Grid.Column="0" Grid.Row="4" />
            <DatePicker  Grid.Column="0" Grid.Row="5"  Margin="0,0,20,0"/>

            <Button Content="Update" Grid.Column="0" Grid.Row="7" Background="LightBlue" Width="150" HorizontalAlignment="Left" />
        </Grid>
    </StackPanel>
</UserControl>
